{
"$schema": "http://json-schema.org/schema#",
"title": "ESGF issue JSON schema",
"type": "object",
"properties": {
  "title": {
    "type": "string",
    "minLength": 1
  },
  "description": {
    "type": "string",
    "minLength": 1
  },
  "severity": {
    "type": "string",
    "enum": [
      "Low",
      "Medium",
      "High",
      "Critical"
    ]
  },
  "project": {
    "type": "string",
    "minLength": 1
  },
  "models": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "minLength": 1
    }
  },
  "url": {
    "type": "string",
    "minLength": 1
  },
  "materials": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "pattern": "\\.(jpg|gif|png|tiff)$"
    }
  }
},
"additionalProperties": false,
"required": [
  "title",
  "description",
  "severity",
  "project",
  "models"
]
}
