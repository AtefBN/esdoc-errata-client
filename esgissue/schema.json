{
"$schema": "http://json-schema.org/schema#",
"title": "ESGF issue JSON schema",
"type": "object",
"properties": {
  "remote_id": {
    "type": "integer",
    "minimum": 0
  },
  "title": {
    "type": "string"
  },
  "description": {
    "type": "string"
  },
  "project": {
    "type": "string",
    "enum": [
      "CMIP5",
      "CMIP6",
      "TAMIP",
      "LUCID",
      "SPECS",
      "GeoMIP",
      "PMIP3",
      "obs4MIPs",
      "ISI-MIP",
      "CORDEX"
    ]
  },
  "severity": {
    "type": "string",
    "enum": [
      "minor",
      "major",
      "critical",
      "blocker"
    ]
  },
  "kind": {
    "type": "string",
    "enum": [
      "bug",
      "enhancement"
    ]
  },
  "url": {
    "type": "string"
  },
  "materials": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string"
    }
  },
  "hash_key": {
    "type": "string",
    "minLength": 32,
    "maxLength": 32
  }
},
"additionalProperties": false,
"required": [
  "title",
  "description",
  "project",
  "severity",
  "kind"
]
}
