{
"$schema": "http://json-schema.org/schema#",
"title": "ESGF issue JSON schema",
"type": "object",
"properties": {
  "number": {
    "type": "integer",
    "minimum": 0
  },
  "id": {
    "type": "string",
    "pattern": "^[0-9a-f]{8}(-[0-9a-f]{4}){3}-[0-9a-f]{12}$"
  },
  "title": {
    "type": "string",
    "minLength": 1
  },
  "description": {
    "type": "string",
    "minLength": 1
  },
  "severity": {
    "type": "string",
    "enum": [
      "Low",
      "Medium",
      "High",
      "Critical"
    ]
  },
  "project": {
    "type": "string",
    "minLength": 1
  },
  "models": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "minLength": 1
    }
  },
  "url": {
    "type": "string",
    "minLength": 1
  },
  "materials": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "pattern": "\\.(jpg|gif|png|tiff)$"
    }
  },
  "state": {
    "type": "string",
    "enum": [
      "New",
      "On hold",
      "Wontfix",
      "Resolved"
    ]
  },
  "created_at": {
    "type": "string",
    "format": "date-time"
  },
  "last_updated_at": {
    "type": "string",
    "format": "date-time"
  }
},
"additionalProperties": false,
"required": [
  "number",
  "id",
  "title",
  "description",
  "severity",
  "project",
  "models",
  "state",
  "created_at",
  "last_updated_at"
]
}
